<%- include("partials/header") %>

<h2><%= title %></h2>
<% if(flash){ %>
    <p class="flash">
        <%= flash %>
    </p>
<% } %>
<% if(errors && error.length) { %>
    <div class="errors">
        <strong>Please fix the Following</strong>
        <ul>
            <% errors.forEach(error =>{ %>
                <li><%= error %></li>
            <% }) %>
        </ul>
    </div>
<% } %>

<form action="/students" method="POST" class="form">
    <label>Name:
        <input type="text" name="name" value="<%= form.name %>" required>
    </label>
    <label>Grade:
        <input type="text" name="grade" value="<%= form.grade %>" required placeholder="A, B+, D ... etc">
    </label>
    <label>Age:
        <input type="number" name="age" value="<%= form.age %>" min="5" max="120" required>
    </label>
    <button type="submit">Add Student</button>
</form>

<ul>
    <% students.forEach(student =>{ %>
        <li>
            <strong><%= student.name %></strong> - Grade:<%= student.grade %> -- Age:<%= student.age %>
        </li>
    <% }) %>

</ul>


<%- include("partials/footer") %>